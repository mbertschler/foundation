{
  "name": "foundation",
  "module": "index.js",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "bun run build:css",
    "build:css": "tailwindcss -i ./main.css -o ./dist/bundle.css --minify",
    "watch": "bun run watch:css",
    "watch:css": "tailwindcss -i ./main.css -o ./dist/bundle.css --watch --optimize --minify"
  },
  "dependencies": {
    "@tailwindcss/cli": "4.1.13",
    "basecoat-css": "0.3.2"
  }
}