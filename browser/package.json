{
  "name": "foundation",
  "module": "index.js",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "concurrently 'bun build-css' 'bun build-js' && bun run purge-css",
    "build-css": "tailwindcss -i ./main.css -o ./dist/main.css --optimize --minify",
    "build-js": "esbuild main.js --bundle --minify --sourcemap --metafile=dist/esbuild_meta.json --outdir=dist",
    "purge-css": "purgecss --css ./dist/main.css --output ./dist/main.min.css --content '../pages/**/*.go'",
    "watch": "concurrently 'bun watch-css' 'bun watch-esbuild'",
    "watch-css": "tailwindcss -i ./main.css -o ./dist/main.css --watch",
    "watch-esbuild": "esbuild main.js --bundle --minify --sourcemap --outdir=dist --watch"
  },
  "dependencies": {
    "@hotwired/stimulus": "3.2.2",
    "basecoat-css": "0.3.2"
  },
  "devDependencies": {
    "@tailwindcss/cli": "4.1.13",
    "concurrently": "9.2.1",
    "esbuild": "0.25.9",
    "purgecss": "7.0.2"
  }
}